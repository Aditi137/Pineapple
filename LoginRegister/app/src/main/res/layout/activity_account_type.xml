<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sgc.loginregister.AccountTypeActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/bSurpervisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surpervisor"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bSupervisee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supervisee"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/bSurpervisor"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/bSurpervisor"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/bSurpervisor" />

</android.support.constraint.ConstraintLayout>
