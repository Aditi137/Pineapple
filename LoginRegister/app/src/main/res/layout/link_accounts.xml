<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sgc.loginregister.LinkAccounts">

    <EditText
        android:id="@+id/user_id"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="216dp"
        android:ems="10"
        android:hint="Username/UserID"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="129dp"
        android:layout_height="56dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="98dp"
        android:text="Send request"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_id"
        tools:layout_editor_absoluteX="131dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="295dp"
        android:layout_height="45dp"
        android:layout_marginBottom="29dp"
        android:layout_marginRight="57dp"
        android:text="Insert a username below that you would like to link your account with "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/user_id"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="142dp" />
</android.support.constraint.ConstraintLayout>